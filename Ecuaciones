#include <stdio.h>
#include <math.h>

 void ecuacion (double,double,double,double *, double *);

 void main (void){
     double a,b,c, x1, x2;

     while(1+1==2){
     printf("Itroduzca a: \n");
     scanf("%lf", &a);
     printf("Itroduzca b: \n");
     scanf("%lf", &b);
     printf("Itroduzca c: \n");
     scanf("%lf", &c);
     ecuaciones(a, b, c, &x1, &x2);
     printf("Las soluciones de las ecuaciones son: %lf y %lf", x1,x2);
     }
 }
 void ecuaciones (double a , double b , double c , double *x1, double *x2){
      *x1 = (-b+(sqrt(b*b-4*a*c)))/2*a;
      *x2 = (-b-(sqrt(b*b-4*a*c)))/2*a;
 }
