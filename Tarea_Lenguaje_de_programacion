#include <stdio.h>
int main()
{
    float Vs;
    int R1,R2,R3,RT;
    float I;
    printf("Escribe el valor de la fuente: ");
    scanf("%f",&Vs); //recibe valores tecleados
    /*
    printf("Restencia 1: ");
    scanf("%d",&R1);
    printf("Resistencia 2: ");
    scanf("%d",&R2);
    printf("Resistencia 3: ");
    scanf("%d",&R3);
    */
    printf("Escribe la resistencia de cada led R1,R2 y R3: ");
    scanf("%d,%d,%d",&R1,&R2,&R3);
    RT=R1+R2+R3; //Resistencia total
    I=Vs/RT; //Corriente
    printf("La corriente I es %.2fA\n",I);
    printf("La resistencia de led amarillo es R1 (%d ohms) es %0.2fV\n",R1,I*R1);
    printf("La resistencia del led azul es R2 (%d ohms) es %0.2fV\n",R2,I*R2);
    printf("La resistenci del led morado es R3(%d ohms) es %0.2fV\n",R3,I*R3);
return 0;

}
